<UserControl
    x:Class="Framework.UserControls.ClipboardCopy"
    xmlns:local="using:Framework.UserControls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="100"
    d:DesignWidth="100">

    <StackPanel Orientation="Horizontal">
        <Button x:Name="CopyButton" Style="{StaticResource GlyphiconCopy}" Click="Copy_Click" />
        <Button x:Name="PasteButton" Style="{StaticResource GlyphiconPaste}" Click="Paste_Click" Visibility="Collapsed" />
    </StackPanel>
</UserControl>
