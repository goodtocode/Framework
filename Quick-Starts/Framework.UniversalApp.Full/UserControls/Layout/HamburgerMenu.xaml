<uc:ReadOnlyControl
    x:Class="Framework.UserControls.HamburgerMenu"
    xmlns:uc="using:Framework.UserControls"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"       
      mc:Ignorable="d">

    <SplitView x:Name="MenuContainer" IsPaneOpen="True" Style="{StaticResource MenuSplitViewStyle}">
        <SplitView.Pane>
            <StackPanel x:Name="HamburgerMenuPanel" Orientation="Vertical" HorizontalAlignment="Center">
                <Button x:Name="HomeButton" Style="{StaticResource GlyphiconHome}" Click="Home_Click" />
                <Button x:Name="SearchButton" Style="{StaticResource GlyphiconSearch}" Click="Search_Click" />
                <Button x:Name="CreateButton" Style="{StaticResource GlyphiconCreate}" Click="Create_Click" />
            </StackPanel>
        </SplitView.Pane>
    </SplitView>
</uc:ReadOnlyControl>


