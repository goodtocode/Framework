<uc:ReadOnlyControl
    x:Class="GoodToCode.Framework.UserControls.TopMenu"
    xmlns:uc="clr-namespace:GoodToCode.Framework.UserControls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel x:Name="TopMenuPanel" Orientation="Horizontal" HorizontalAlignment="Center">
        <Button x:Name="CreateButton" Style="{StaticResource GlyphiconAdd}" Click="Create_Click" />
        <Button x:Name="EditButton" Style="{StaticResource GlyphiconEdit}" Click="Edit_Click" />
        <Button x:Name="DeleteButton" Style="{StaticResource GlyphiconDelete}" Click="Delete_Click" />
        <Button x:Name="SummaryButton" Style="{StaticResource GlyphiconSearch}" Click="Search_Click" />
    </StackPanel>
</uc:ReadOnlyControl>
