<uc:ReadOnlyControl
    x:Class="GoodToCode.Framework.UserControls.ProgressProcessingRing"
    xmlns:uc="clr-namespace:GoodToCode.Framework.UserControls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel x:Name="PanelRoot" Visibility="Collapsed" Orientation="Vertical" Margin="0,5,0,0">
        <StackPanel x:Name="PanelProcessing" Orientation="Horizontal">
            <uc:ProgressRingControl x:Name="ProgressRingIndeterminate" Margin="0,0,0,5"/>
            <TextBlock x:Name="TextProcessing" TextWrapping="Wrap" Margin="10,0,0,0" Style="{StaticResource ProgressMessageStyle}" />
        </StackPanel>
        <TextBlock x:Name="TextResult" Visibility="Collapsed" TextWrapping="Wrap" Style="{StaticResource ProgressMessageStyle}" />
    </StackPanel>
</uc:ReadOnlyControl>
