<Page x:Class="GoodToCode.Framework.Themes.GenericLayout"
x:Name="RootPage"
xmlns:local="using:GoodToCode.Framework.Themes"
xmlns:uc="using:GoodToCode.Framework.UserControls"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
mc:Ignorable="d">
    
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Content/ApplicationStyles.xaml" />
                <ResourceDictionary Source="/Content/ControlStyles.xaml" />
                <ResourceDictionary Source="/Content/GlyphiconStyles.xaml" />
                <ResourceDictionary Source="/Content/LayoutStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="0.75*" />
            <RowDefinition Height="8.25*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="9*" />
        </Grid.ColumnDefinitions>
        <uc:HeaderBar Text="GoodToCode Framework for Universal and Xamarin" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" />
        <uc:HamburgerMenu Grid.Row="1" Grid.Column="0" Grid.RowSpan="6" />
        <Frame x:Name="Title" FontSize="22" Margin="50,10,0,0" Grid.Row="1" Grid.Column="1" />
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" >
            <Frame x:Name="Body" Margin="50,10,0,0" />
        </ScrollViewer>
    </Grid>
</Page>
